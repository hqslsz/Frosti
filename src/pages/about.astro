---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About">
  <MainCard
    title="About Quasi2317"
    description="这里的青蛙🐸不能给你，因为这是我的简介"
    image="/img/rivernight.png"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://github.com/hqslsz.png" alt="Quasi2317" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Quasi2317</h1>
          <p class="text-xl text-base-content/80 mb-4">准勇者2317号，电气本科在读，梦想改造世界</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/hqslsz"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://space.bilibili.com/347716167"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="simple-icons:bilibili" class="w-4 h-4" />
              <span>bilibili</span>
            </a>
            <a href="mailto:wlrh_lishuzeWR@outlook.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">介绍完了，hhhhh</p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats username="hqslsz" showLanguages={false} showCommitGraph={true} />
      </section>

      <!-- Tech Stack -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:code-2" class="w-6 h-6 text-primary" />
          <span>Tech Stack</span>
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {
            [
              { name: "Astro", icon: "simple-icons:astro", color: "oklch(0.5 0.2 300)", url: "https://astro.build/" },
              {
                name: "JavaScript",
                icon: "simple-icons:javascript",
                color: "oklch(0.8 0.2 80)",
                url: "https://developer.mozilla.org/docs/Web/JavaScript",
              },
              {
                name: "TypeScript",
                icon: "simple-icons:typescript",
                color: "oklch(0.6 0.2 250)",
                url: "https://www.typescriptlang.org/",
              },
              { name: "React", icon: "simple-icons:react", color: "oklch(0.7 0.2 200)", url: "https://react.dev/" },
              {
                name: "Node.js",
                icon: "simple-icons:nodedotjs",
                color: "oklch(0.7 0.2 140)",
                url: "https://nodejs.org/",
              },
              {
                name: "TailwindCSS",
                icon: "simple-icons:tailwindcss",
                color: "oklch(0.6 0.2 220)",
                url: "https://tailwindcss.com/",
              },
              {
                name: "HTML5",
                icon: "simple-icons:html5",
                color: "oklch(0.7 0.2 30)",
                url: "https://developer.mozilla.org/docs/Web/HTML",
              },
              {
                name: "CSS3",
                icon: "simple-icons:css3",
                color: "oklch(0.7 0.2 220)",
                url: "https://developer.mozilla.org/docs/Web/CSS",
              },
              { name: "Git", icon: "simple-icons:git", color: "oklch(0.7 0.2 30)", url: "https://git-scm.com/" },
              { name: "C++", icon: "simple-icons:cplusplus", color: "oklch(0.6 0.2 240)", url: "https://isocpp.org/" },
              {
                name: "C#",
                icon: "simple-icons:csharp",
                color: "oklch(0.6 0.2 160)",
                url: "https://learn.microsoft.com/dotnet/csharp/",
              },
              {
                name: "Python",
                icon: "simple-icons:python",
                color: "oklch(0.7 0.2 250)",
                url: "https://www.python.org/",
              },
            ].map((tech) => (
              <a
                href={tech.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex flex-col items-center justify-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors"
                title={tech.name}
              >
                <div class="text-3xl mb-2" style={`color: ${tech.color}`}>
                  <Icon name={tech.icon} class="w-10 h-10" />
                </div>
                <span class="text-sm font-medium">{tech.name}</span>
              </a>
            ))
          }
        </div>
      </section>

      <!-- Contribution Activity -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:trophy" class="w-6 h-6 text-primary" />
          <span>Awards</span>
        </h2>

        <div class="bg-base-200 rounded-xl p-6 overflow-x-auto">
          <div class="flex flex-col md:flex-row gap-8 md:gap-4 md:overflow-x-auto md:pb-2">
            {
              [
                {
                  date: "December 2023",
                  title: "CTF校赛",
                  desc: "二等奖",
                },
                {
                  date: "April 2024",
                  title: "蓝桥杯网安西南赛区",
                  desc: "省三等奖",
                },
                {
                  date: "March 2024",
                  title: "CISCN",
                  desc: "初赛全国377名",
                },
                {
                  date: "June 2024",
                  title: "ISCC",
                  desc: "忘了多少名了，出了三道题，有个名次",
                },
              ].map((item, i) => (
                <div class="relative flex gap-4 pb-2 md:pb-0 md:min-w-[250px]">
                  <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-content text-xl">
                      {i + 1}
                    </div>
                    <div class="w-0.5 h-16 bg-base-300 mt-2 md:hidden" />
                  </div>
                  <div>
                    <div class="text-sm text-base-content/60 mb-1">{item.date}</div>
                    <h3 class="text-lg font-bold">{item.title}</h3>
                    <p class="text-base-content/80 mt-1">{item.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
