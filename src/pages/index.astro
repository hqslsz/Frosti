---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FeatureCard from "@/components/mdx/FeatureCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="Home">
  <MainCard
    title="Welcome to Qu‘s Marsh"
    description="这里有一只🐸，你抓到了它，想要更多🐸么？在我的博文里寻找吧~"
    image="/img/river.png"
    infoIcon="lucide:info"
  >
    <div class="space-y-8">
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1
            class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-loose"
          >
            🐸 Qu’s Marsh
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">
            人迹罕至的沼泽——无冢安身之人的归宿。你可能去过各地的ク族の沼，这里是互联网大陆的ク族の沼。我，现役准勇者2317号席位，是这里的主人
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/blog" class="btn btn-primary gap-2 btn-shine-effect">
              <Icon name="lucide:book-open" class="w-5 h-5" />
              <span>寻找青蛙🐸</span>
            </a>
            <a href="https://github.com/hqslsz" target="_blank" class="btn btn-outline gap-2">
              <Icon name="lucide:github" class="w-5 h-5" />
              <span>我的GitHub</span>
            </a>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:sparkles" class="w-6 h-6 text-primary" />
          <span>博客讨论内容</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <FeatureCard
            title="数字媒体类"
            description="3D建模，动画相关的一切内容"
            icon="simple-icons:blender"
            color="oklch(0.7 0.2 30)"
          />

          <FeatureCard
            title="游戏相关"
            description="游戏引擎，游戏设计，游戏开发等"
            icon="simple-icons:republicofgamers"
            color="oklch(0.65 0.2 280)"
          />

          <FeatureCard
            title="电路"
            description="专业对口，电路相关的一切，尤其是电力系统等强电方向的一切"
            icon="simple-icons:multisim"
            color="oklch(0.6 0.2 160)"
          />

          <FeatureCard
            title="计算机类"
            description="编程语言，操作系统，网络安全等"
            icon="simple-icons:archlinux"
            color="oklch(0.6 0.2 200)"
          />

          <FeatureCard
            title="数理基础类"
            description="没有人不为数理基础着迷，为神之一笔的证明沸腾"
            icon="simple-icons:comsol"
            color="oklch(0.8 0.2 80)"
          />

          <FeatureCard
            title="随便写点东西"
            description="日常所思所感"
            icon="lucide:palette"
            color="oklch(0.7 0.2 10)"
          />
        </div>
      </section>

